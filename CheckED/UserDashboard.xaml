<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckED.UserDashboard"
             Title="User Dashboard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

       
        <ImageButton Source="hamburger_icon.png" Clicked="OnHamburgerClicked"
                     BackgroundColor="Transparent" WidthRequest="30" HeightRequest="30"
                     HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />

        
        <StackLayout x:Name="Sidebar" BackgroundColor="LightGray" Padding="10"  IsVisible="False"
                     Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" VerticalOptions="FillAndExpand" WidthRequest="200" Margin="0,64,0,0">
            <Label Text="User Options" FontSize="18" TextColor="Black" HorizontalOptions="Center" />
            <Button Text="Profile" BackgroundColor="Transparent" TextColor="Black" />
            <Button Text="Settings" BackgroundColor="Transparent" TextColor="Black" />
            <Button Text="Logout" BackgroundColor="Transparent" TextColor="Black" />
        </StackLayout>

        
        <ScrollView BackgroundColor="White" Grid.Row="1" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                
                <VerticalStackLayout Padding="40" Spacing="10" Grid.Column="0">
                    <Label Text="Upcoming Events" FontAttributes="Bold" FontSize="18" TextColor="Black" Padding="10,0,0,20"/>
                    <Border Stroke="Transparent" HeightRequest="450">
                        <ScrollView>
                            <CollectionView ItemsSource="{Binding UpcomingEvents}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="10" Margin="10" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                                            <StackLayout Spacing="10">
                                                <Image Source="{Binding ImageUrl}" Aspect="AspectFit" HeightRequest="200" />
                                                <Label Text="{Binding EventName}" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                                                <Label Text="{Binding EventDate}" FontSize="16" TextColor="Gray" />
                                                <Label Text="{Binding EventDescription}" FontSize="14" TextColor="Black" />
                                                <Button Text="REGISTER" Clicked="BtnRegister" BackgroundColor="Black" TextColor="White" />
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Border>
                </VerticalStackLayout>


                
                <VerticalStackLayout Padding="40" Spacing="10" Grid.Column="1">
                    <Label Text="Registered Events" FontAttributes="Bold" FontSize="18" TextColor="Black" />
                    <Border Stroke="Transparent" HeightRequest="450">
                        <ScrollView>
                            <CollectionView ItemsSource="{Binding UpcomingEvents}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="10" Margin="10" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                                            <StackLayout Spacing="5">
                                                <Image Source="{Binding ImageUrl}" Aspect="AspectFit" HeightRequest="200" />
                                                <Label Text="{Binding EventName}" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                                                <Label Text="{Binding EventDate}" FontSize="16" TextColor="Gray" />
                                                <Label Text="{Binding EventDescription}" FontSize="14" TextColor="Black" />
                                                <Button Text="Check In" BackgroundColor="Black" TextColor="White" />
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
